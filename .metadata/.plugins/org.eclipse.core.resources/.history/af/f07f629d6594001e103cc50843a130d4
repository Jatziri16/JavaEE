function validarForms()
{
	console.log("ENTRO A validarForms()")
	let clave = document.getElementById("clave").value;
	let titulo = document.getElementById("titulo").value;
	let precio = document.getElementById("precio").value;
	let precio = document.getElementById("cveprov").value;
	let precio = document.getElementById("inventario").value;

	if(clave == "" || titulo == "" || precio == "") { 
		setWarnsMsj();
	}
	else
	{
		alert("\ntitulo = "+titulo+"\nprecio = "+precio+"\nclave = "+clave)
	}
}

